<Window x:Class="GerenciamentoDePedidos.Views.AdicionaProdutoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GerenciamentoDePedidos.Views"
        mc:Ignorable="d"
        Title="AdicionaProdutoWindow" Height="450" Width="800">
        <StackPanel Margin="10">
            <TextBox x:Name="TxtNome" Text="Nome do Produto" Margin="0,0,0,10"/>
            <TextBox x:Name="TxtValor" Text="Valor" Margin="0,0,0,10"/>
            <Button Content="Salvar" Click="BtnSalvar_Click"/>
        </StackPanel>
    
</Window>
