<Window x:Class="GerenciamentoDePedidos.Views.ListarProdutosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produtos Cadastrados" Height="350" Width="500">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10" HorizontalAlignment="Left">
            <Button x:Name="BtnAdicionarProduto" Content="Adicionar Produto" Width="150" Margin="0,0,10,0" Click="BtnAdicionarProduto_Click"/>
        </StackPanel>
        <DataGrid x:Name="ProdutosDataGrid" AutoGenerateColumns="True" />
    </DockPanel>
</Window>