<Window x:Class="GerenciamentoDePedidos.Views.Pedidos.ListarPedidosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pedidos" Height="500" Width="900">
    <DockPanel Margin="10">
        <!-- Barra de ações e filtros -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Content="Adicionar Pedido" Width="150" Margin="0,0,10,0" Click="BtnAdicionarPedido_Click"/>
            <Label Content="Pessoa:" VerticalAlignment="Center"/>
            <TextBox x:Name="FiltroPessoa" Width="120" Margin="5,0,10,0"/>
            <Label Content="Status:" VerticalAlignment="Center"/>
            <ComboBox x:Name="FiltroStatus" Width="120" Margin="5,0,10,0"/>
            <Button Content="Filtrar" Width="80" Click="BtnFiltrar_Click"/>
        </StackPanel>
        <!-- Lista de pedidos -->
        <DataGrid x:Name="PedidosDataGrid" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Ações" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Editar" Margin="0,0,5,0" Click="BtnEditarPedido_Click"/>
                                <Button Content="Excluir" Click="BtnExcluirPedido_Click"/>
                                <Button Content="Details" Click="BtnDetailsPedido_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Pessoa" Binding="{Binding NomePessoa}" Width="150"/>
                <DataGridTextColumn Header="Data" Binding="{Binding DataVenda, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding StatusVenda}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
