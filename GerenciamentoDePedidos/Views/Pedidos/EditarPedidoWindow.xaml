<Window x:Class="GerenciamentoDePedidos.Views.Pedidos.EditarPedidoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Pedido" Height="400" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Pessoa:" Grid.Row="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="PessoaComboBox" Grid.Row="0" Margin="80,0,0,0" Width="250"/>

        <TextBlock Text="Forma de Pagamento:" Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <ComboBox x:Name="FormaPagamentoComboBox" Grid.Row="1" Margin="150,10,0,0" Width="180"/>

        <TextBlock Text="Status:" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <ComboBox x:Name="StatusComboBox" Grid.Row="2" Margin="80,10,0,0" Width="250"/>

        <TextBlock Text="Produtos:" Grid.Row="3" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <ListBox x:Name="ProdutosListBox" Grid.Row="3" Margin="80,10,0,0" Width="250" Height="80" SelectionMode="Multiple"/>

        <TextBlock Text="Valor Total:" Grid.Row="4" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <TextBox x:Name="ValorTotalTextBox" Grid.Row="4" Margin="80,10,0,0" Width="250" IsReadOnly="True"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Salvar" Width="80" Margin="0,0,10,0" Click="BtnSalvar_Click"/>
            <Button Content="Cancelar" Width="80" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
