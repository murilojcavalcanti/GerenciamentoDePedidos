<Window x:Class="GerenciamentoDePedidos.Views.Pedidos.EditarPedidoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Pedido" Height="500" Width="450" WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Pessoa (somente leitura) -->
        <TextBlock Text="Cliente:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="PessoaTextBlock" Grid.Row="0" Margin="80,0,0,0" FontWeight="Bold"/>

        <!-- Forma de pagamento -->
        <TextBlock Text="Forma de Pagamento:" Grid.Row="1" Margin="0,10,0,0" VerticalAlignment="Center"/>
        <ComboBox x:Name="FormaPagamentoComboBox" Grid.Row="1" Margin="150,10,0,0" Width="180"/>

        <!-- Status -->
        <TextBlock Text="Status:" Grid.Row="2" Margin="0,10,0,0" VerticalAlignment="Center"/>
        <ComboBox x:Name="StatusComboBox" Grid.Row="2" Margin="80,10,0,0" Width="250"/>

        <!-- Adicionar produtos -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Adicionar Produto:" VerticalAlignment="Center"/>
            <ComboBox x:Name="ProdutoComboBox" Width="180" Margin="10,0,0,0"
                      DisplayMemberPath="Nome" SelectedValuePath="Id"/>
            <Button Content="Adicionar" Width="80" Margin="10,0,0,0"
                    Click="BtnAdicionarProduto_Click"/>
        </StackPanel>

        <!-- Lista de produtos -->
        <GroupBox Header="Produtos do Pedido" Grid.Row="4" Margin="0,10,0,0">
            <DockPanel>
                <Button Content="Remover Selecionado" Height="50" DockPanel.Dock="Bottom" 
                        Margin="0,5,0,0" Click="BtnRemoverProduto_Click"/>
                <ListBox x:Name="ProdutosListBox" Height="150">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                <TextBlock Text="Nome:" Margin="10,0,0,0"/> 
                                <TextBlock Text="{Binding Nome}" Width="120"/>
                                <TextBlock Text="Qtd:" Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding Quantidade}" Width="30" Margin="2,0,0,0"/>
                                <TextBlock Text="Und:" Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding PrecoUnitario, StringFormat=R$ {0:N2}}" Width="70" Margin="2,0,0,0"/>
                                <TextBlock Text="SubTotal:" Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding Subtotal, StringFormat=R$ {0:N2}}" Width="70" Margin="2,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </GroupBox>

        <!-- Valor Total + Botões -->
        <StackPanel Grid.Row="5" Orientation="Vertical" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <TextBlock Text="Valor Total:" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBox x:Name="ValorTotalTextBox" Width="120" Margin="10,0,0,0" IsReadOnly="True"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Salvar" Width="100" Margin="0,0,10,0" Click="BtnSalvar_Click"/>
                <Button Content="Cancelar" Width="100" Click="BtnCancelar_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
