<Window x:Class="GerenciamentoDePedidos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciamento de Pedidos" Height="450" Width="800">
    <DockPanel Margin="10">
        <!-- Painel de Botões -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10" HorizontalAlignment="Left">
            <Button x:Name="BtnAdicionarProduto" Content="Adicionar Produto" Width="150" Margin="0,0,10,0" Click="BtnAdicionarProduto_Click"/>
            <Button x:Name="BtnAdicionarPedido" Content="Adicionar Pedido" Width="150" Margin="0,0,10,0" Click="BtnAdicionarPedido_Click"/>
            <Button x:Name="BtnListarPessoas" Content="Listar Pessoas" Width="150" Margin="0,0,10,0" Click="BtnListarPessoas_Click"/>
            <Button x:Name="BtnListarProdutos" Content="Listar Produtos" Width="150" Click="BtnListarProdutos_Click"/>
        </StackPanel>

        <!-- Lista de Pedidos -->
        <DataGrid x:Name="PedidosDataGrid" AutoGenerateColumns="True" DockPanel.Dock="Bottom" />
    </DockPanel>
</Window>
