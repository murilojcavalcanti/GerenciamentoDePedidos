<Window x:Class="GerenciamentoDePedidos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciamento de Pedidos" Height="450" Width="800">
    <DockPanel Margin="10">
        <!-- Painel de Botões -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10" HorizontalAlignment="Center" >
            <Button x:Name="BtnListarPedidos" Content="Pedidos" Width="150" Margin="0,0,10,0"   Click="BtnListarPedidos_Click"/>
            <Button x:Name="BtnListarProdutos" Content="Produtos" Width="150" Margin="0,0,10,0" Click="BtnListarProdutos_Click"/>
            <Button x:Name="BtnListarPessoas" Content="Pessoas" Width="150"                     Click="BtnListarPessoas_Click"/>
        </StackPanel>

        <GroupBox Header="Últimos 5 Pedidos" DockPanel.Dock="Bottom" FontWeight="Bold">
            <DataGrid x:Name="PedidosDataGrid" AutoGenerateColumns="True" IsReadOnly="True" Height="300" Margin="0,10,0,0"/>
        </GroupBox>
    </DockPanel>
</Window>
